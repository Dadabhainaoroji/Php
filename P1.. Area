<?php
//Program for Area of Triangle and Rectangle
#Parameters of Triangle
$base = 10; 
$height = 15;
#Parameters of Rectangle 
$length = 8;
$breadth = 5;
#Area of Triangle
$Trarea = ($base * $height) / 2; 
echo "The area of a Triangle with Base = $base and Height = $height is $Trarea 
<br> <br>";
#Area of Rectangle
$Rectarea = $length * $breadth; 
echo "The area of a Rectangle with Length = $length and Width = $breadth is 
$Rectarea";
?>
